<h1>Login</h1>

<%= form_with url: login_path, local: true, data: { turbo: false } do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.submit "Login" %>
  </div>
<% end %>

<p>
  Don't have an account? <%= link_to "Sign Up", signup_path %>
</p>
