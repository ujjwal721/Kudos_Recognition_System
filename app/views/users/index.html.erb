<h1>Search Results</h1>

<% if @users.any? %>
  <ul>
    <% @users.each do |user| %>
      <li>
        <%= link_to user.name, user_path(user) %> - <%= user.email %> - <%= user.role_name.to_s.humanize %>
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No users found matching your criteria.</p>
<% end %>

<%= link_to "Back to Feed", feed_kudos_path, class: "btn btn-secondary" %>
