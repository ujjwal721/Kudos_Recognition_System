<h1 class="mb-4">Leaderboard</h1>

<% if @top_users.present? %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Rank</th>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th>Total Points</th>
      </tr>
    </thead>
    <tbody>
      <% @top_users.each_with_index do |user, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role_name.to_s.humanize %></td>
          <td><%= user.leaderboard_score || 0 %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="alert alert-info">
    No leaderboard data available.
  </div>
<% end %>

<div class="mt-3">
  <%= link_to "Back to Feed", feed_kudos_path, class: "btn btn-secondary" %>
</div>
